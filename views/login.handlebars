{{!-- Login form --}}
<form class="login-form">
  <div>
    <label for="id-login">email:</label>
    <input type="text" id="id-login" />
  </div>
  <div>
    <label for="password-login">password:</label>
    <input type="password" id="password-login" />
  </div>
  <div>
    <button type="submit">login</button>
  </div>
</form>

{{!-- signup form --}}
<form class="signup-form">
  <div>
    <label for="firstname-signup">username:</label>
    <input type="text" id="firstname-signup" />
  </div>
  <div>
    <label for="lastname-signup">email:</label>
    <input type="text" id="lastname-signup" />
  </div>
  <div>
    <label for="password-signup">password:</label>
    <input type="password" id="password-signup" />
  </div>
  <div>
    <button type="submit">signup</button>
  </div>
</form>

